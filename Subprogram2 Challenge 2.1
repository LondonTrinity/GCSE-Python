    number = int(input("Enter your number >>> "))

    for n in range (13):
        print(n * number)

    menu()

def adding():
    num1 = int(input("Enter the first number >>> "))
    num2 = int(input("Enter the second number >>> "))

    print(num1 + num2)

    menu()

def multiply():
    num1 = int(input("Enter the first number >>> "))
    num2 = int(input("Enter the second number >>> "))

    print(num1 * num2)

