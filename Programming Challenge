#Programming Challenge

import random

def signup (): 
    username = input("Choose your username: ")
    password = input("Input a password: ")
    
    with open("authentication.txt", "a") as authentication:
        authentication.write(username + "#" + password)
        authentication.write("""
""")
    print("User successfully added")
    
def login():
    logged_In = 0
    while logged_In < 2: 
        login = input("Do you have an account? ")
        if login == "yes":
            username = input("Enter your username>>> ")
            password = input("Enter your password>>> ")
            finduser(username, password)
            logged_In += 1
        else:
            signup()
    
def finduser (user, password):


    with open ("authentication.txt", "r") as authentication:
        while False:
            for line in authentication:
                line.split("#")  
                if line[0] == user and line[1] == password:
                    print("Logged in")
                    return True
                else:
                    return False

        
def dice_roll ():
    roll1 = random.randint(1, 6)
    roll2 = random.randint(1, 6)

def main():
    login()
    

main()
    
