#Subprogram1 Challenge 05

def choice1():
    print("think big chosen")

def choice2():
    print("think bigger chosen")

def choice3():
    print("winning chosen")

def choice4():
    print("winner chosen")

def choice5():
    print("Exit chosen")
    print("bye")

def option_Chosen(choice):

    if choice == 1:
        choice1()
    elif choice == 2:
        choice2()
    elif choice == 3:
        choice3()
    elif choice == 4:
        choice4()
    elif choice == 5:
        choice5()

def choice():
    choice = int(input("Enter a choice >>> "))

    while choice >= 6 or choice <= 0:
        print("Invalid choice")
        choice = int(input("Enter a valid choice >>> "))

    option_Chosen(choice)
    
