#Subprogram1 Challenge 05

def option_Chosen(choice):

    if choice == 1:
        print("think big chosen")
    elif choice == 2:
        print("think bigger chosen")
    elif choice == 3:
        print("winning chosen")
    elif choice == 4:
        print("winner chosen")
    elif choice == 5:
        print("Exit chosen")
        print("bye")

def choice():
    choice = int(input("Enter a choice >>> "))

    while choice >= 6 or choice <= 0:
        print("Invalid choice")
        choice = int(input("Enter a valid choice >>> "))

    option_Chosen(choice)
    
def menu():
    print("1) think big")
    print("2) think bigger")
    print("3) winning")
    print("4) winner")
    print("5) Exit")
    choice()

menu()
